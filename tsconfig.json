{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "EsNext",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "strict": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["node"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      },
    "include": [
      "./config/jest/setupTests.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx",
    ],
}